{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Group all Docker image updates into a single PR",
      "matchDatasources": ["docker"],
      "groupName": "Docker Images",
      "groupSlug": "docker-images"
    },
    {
      "description": "Auto-merge minor and patch updates for Docker images",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Schedule updates for Docker images on weekdays",
      "matchDatasources": ["docker"],
      "schedule": ["before 6am on monday"]
    }
  ],
  "docker": {
    "enabled": true
  },
  "enabledManagers": [
    "helmv3",
    "helm-values",
    "kustomize",
    "kubernetes"
  ],
  
  "platformAutomerge": true,
  "automerge": false,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
